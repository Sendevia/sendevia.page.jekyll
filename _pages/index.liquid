---
author: "sendevia"
layout: "feed"
---

<div
  class="card"
  spec="feed"
  size="large">
  {% assign latest_post = site.posts | first %}
  {% assign article_by_author = site.data.authors[latest_post.author] | default: site.author %}

  <a href="{{ latest_post.url }}">
    <div class="card-impression">
      <div class="impression-image">
        <img
          src="{{ latest_post.impression | default: site.impression }}"
          alt="{{ latest_post.title }}"
          class="impression-image" />
      </div>

      <div class="impression-title">
        <div class="author-mugshot">
          <img src="{{ article_by_author.mugshot }}" alt="mugshot" />
          <span>person_edit</span>
        </div>

        <div class="article-title">
          <h4>{{ latest_post.title }}</h4>
          <h6>{{ article_by_author.name }} · {{ latest_post.date | date: "%Y年%-m月%-d日" }} 发布</h6>
        </div>
      </div>
    </div>

    <div class="card-supporting">
      <h4>{{ latest_post.description }}</h4>
    </div>
  </a>

  <div class="card-action">
    <div>
      <p>{{ latest_post.categories | default: "未分类" }}</p>
    {% comment %} <p>{{ latest_post.tags }}</p> {% endcomment %}
    </div>

    <div>
      <button class="icon-button" spec="tonal">favorite</button>
      <a href="{{ latest_post.url }}">
        <button
          class="common-button"
          spec="filled"
          icon>
          <span>open_in_new</span>详细阅读文章</button>
      </a>
    </div>
  </div>
</div>

<div
  class="card"
  spec="feed"
  size="small"
  color="blue">
  <a href="/posts/关于这个主题的一些事">
    <div class="card-supporting">
      <h5>了解这个 Jekyll 主题</h5>
    </div>
  </a>

  <div class="card-action">
    <a href="/posts/关于这个主题的一些事">
      <button class="icon-button" spec="filled">chevron_right</button>
    </a>
  </div>
</div>

{% for post in site.posts offset: 1 %}
  {% assign article_by_author = site.data.authors[post.author] | default: site.author %}

  <div
    class="card"
    spec="feed"
    size="medium">
    <a href="{{ post.url }}">
      <div class="card-impression">
        <div class="impression-image">
          <img src="{{ post.impression | default: site.impression }}" alt="{{ post.title }}" />
        </div>

        <div class="impression-title">
          <div class="article-title">
            <h4>{{ post.title }}</h4>
            <h6>{{ article_by_author.name }} · {{ post.date | date: "%Y年%-m月%-d日" }} 发布</h6>
          </div>
          <h5>{{ post.description }}</h5>
        </div>
      </div>
    </a>

    <div class="card-action">
      <p>{{ post.categories | default: "未分类" }}</p>
      <div>
        <button class="icon-button" spec="tonal">favorite</button>
        <a href="{{ post.url }}">
          <button class="icon-button" spec="tonal">open_in_new</button>
        </a>
      </div>
    </div>
  </div>
{% endfor %}