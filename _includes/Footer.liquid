<footer class="JTM-S-Footer">
  <div id="JTM-S-Footer-Descriptions">
    <h3>{{ page.title | default: site.title }}</h3>
    <p>来自 {{ site.title }}</p>
    <p>使用主题：
      <a href="https://github.com/Sendevia/jekyll-theme-m3" target="_blank">jekyll-theme-m3</a>
      <a
        href="https://github.com/Sendevia/sendevia.page.jekyll/releases/tag/{{site.version}}"
        target="_blank"
        rel="noopener noreferrer">
        ❤️ 版本：{{ site.version }}</a>
    </p>
    <a href="https://beian.miit.gov.cn/" target="_blank">
      <p>黑ICP备2024016516号-1</p>
    </a>
  </div>
  <div id="JTM-S-Footer-Socialmedia">
    {% for item in site.data.socialmedia %}
      <a
        href="{{ item.link }}"
        target="_blank"
        rel="noopener noreferrer"
        title="{{ item.name }}">
        <button class="JTM-C-IconButton" spec="text">
          {{ item.icon }}
        </button>
      </a>
    {% endfor %}
  </div>
</footer>